<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:nendsdk="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".Activity.MainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Space
            android:layout_width="match_parent"
            android:layout_height="25dip" />

        <Button
            android:id="@+id/database"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="データベース" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="25dip" />

        <Button
            android:id="@+id/cashier"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="キャッシャー" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="25dip" />

        <Button
            android:id="@+id/result"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="売り上げ 準備中です" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="25dip" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">
        <net.nend.android.NendAdView
            android:id="@+id/nend"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            nendsdk:NendApiKey="bbf6a6964ff7937ef9a3b7cac4946dca45c482e2"
            nendsdk:NendSpotId="920623" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
